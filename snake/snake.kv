#:kivy 1.8.0

<Snake>
    head: snake_head
    tail: snake_tail

    SnakeHead:
        id: snake_head
        width: root.width
        height: root.height

    SnakeTail:
        id: snake_tail
        width: root.width
        height: root.height

<SnakeGame>:
    snake: snake_object
    fruit: fruit_object

    Label:
        font_size: 70
        center_x: root.x + root.width/root.col_number*2
        top: root.top - root.height/root.row_number
        text: str(root.score)

    Snake:
        id: snake_object
        width: root.width/root.col_number
        height: root.height/root.row_number

    Fruit:
        id: fruit_object
        width: root.width/root.col_number
        height: root.height/root.row_number

<OptionsPopup>
    title: "Options"
    Button:
        text: "Dismiss"
        on_press: root.dismiss()

<MainMenuScreen>:
    AnchorLayout:
        anchor_x: "center"

        BoxLayout:
            orientation: "vertical"
            size_hint: (0.5, 1)
            spacing: 10
            padding: 50

            Label:
                text: "Ouroboros"
                bold: True
                font_size: 50

            AnchorLayout:
                anchor_x: "center"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: (0.75, 1)
                    spacing: 10
                    padding: 20
                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Play"
                        on_press: root.manager.current = 'game_screen'

                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Options"
                        on_press: root.show_popup()






<GameScreen>:
    game_widget: game_widget_instance

    SnakeGame:
        id: game_widget_instance
